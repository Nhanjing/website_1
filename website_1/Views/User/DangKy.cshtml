
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="~/Content/Website.css" rel="stylesheet" />
<div class="col-1">
    <center>
        <table align="center">
            <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN </h2>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr style="height:40px">
                    <td>HỌ & TÊN  </td>
                    <td>
                        @Html.TextBox("Hotenkh")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td>TÊN ĐĂNG NHẬP  </td>
                    <td>
                        @Html.TextBox("TenDN")
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td>MẬT KHẨU </td>
                    <td>
                        @Html.Password("Matkhau")
                        @ViewData["Loi3"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td>NHẬP LẠI MẬT KHẨU </td>
                    <td>
                        @Html.Password("Matkhaunhaplai")
                        @ViewData["Loi4"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td>Email </td>
                    <td>
                        @Html.TextBox("Email")
                        @ViewData["Loi5"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td>ĐỊA CHỈ </td>
                    <td>
                        @Html.TextBox("Diachi")
                        @ViewData["Loi7"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td>ĐIỆN THOẠI  </td>
                    <td>
                        @Html.TextBox("Dienthoai")
                        @ViewData["Loi6"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td> NGAY SINH  </td>
                    <td>
                        <input type="date" name="Ngaysinh" />
                    </td>
                </tr>
                <tr style="height:40px">
                    <td></td>
                    <td>
                        <input type="submit" value="ĐĂNG KÝ " />
                    </td>
                </tr>
            }
        </table>
    </center>
</div>